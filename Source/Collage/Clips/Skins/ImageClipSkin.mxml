<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	    xmlns:mx="library://ns.adobe.com/flex/mx"
	 	alpha.disabled="0.5">
    <fx:Metadata>
        <![CDATA[ 
        	[HostComponent("Collage.Clip.ClipView")]
        ]]>
    </fx:Metadata> 
	<fx:Script><![CDATA[
		private function smoothImage(ev:Event):void{
			//set image smoothing so image looks better when transformed.
			var bmp:Bitmap = ev.target.content as Bitmap;
			if (bmp)
				bmp.smoothing = true;
		}
	]]></fx:Script>
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="editing" />
    </s:states>
    <s:Rect width="100%" height="100%" >
        <s:fill><s:SolidColor color="0xffffff" alpha="0.0"/></s:fill>
    </s:Rect>
	<mx:Image id="loadedImage" source="{hostComponent.model.URL}" creationComplete="smoothImage(event);" width="100%" height="100%"/>
</s:Skin>