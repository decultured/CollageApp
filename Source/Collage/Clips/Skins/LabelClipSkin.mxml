<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">
    
    <fx:Metadata>
        <![CDATA[ 
        	[HostComponent("Collage.Clip.ClipView")]
        ]]>
    </fx:Metadata> 
    
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="editing" />
    </s:states>
    
    <s:Rect left="0" right="0" top="0" height="{hostComponent.model.fontSize + 2}" radiusX="5" radiusY="5">
        <s:stroke>
            <s:LinearGradientStroke weight="0"/>
        </s:stroke>
        <s:fill>
            <s:LinearGradient rotation="90">
                <s:entries>
                    <s:GradientEntry color="0xCCCCCC" alpha=".2" />
                    <s:GradientEntry color="0x323232" alpha=".2" />
                </s:entries>
            </s:LinearGradient>
        </s:fill>
    </s:Rect>

	<s:Label id="displayLabel" includeIn="normal" lineBreak="explicit"
		text="{hostComponent.model.text}" height="{hostComponent.model.fontSize}" fontSize="{hostComponent.model.fontSize}" color="{hostComponent.model.color}"
		textAlign="center"
		left="0" right="0" top="2"/>
	<s:TextInput id="displayLabelInput" includeIn="editing"
		text="@{hostComponent.model.text}" height="{hostComponent.model.fontSize}" fontSize="{hostComponent.model.fontSize}" color="{hostComponent.model.color}"
		textAlign="center"
		left="0" right="0" top="2"/>
</s:Skin>