<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">
    <fx:Metadata>
        <![CDATA[ 
        	[HostComponent("Collage.Clip.ClipView")]
        ]]>
    </fx:Metadata> 
	<fx:Script><![CDATA[
		import mx.events.FlexEvent;

		protected function EnterEditState(event:FlexEvent):void
		{
			displayLabelInput.setFocus();
			displayLabelInput.drawFocus(true);
		}
	]]></fx:Script>
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="editing" enterState="{EnterEditState(event);}"/>
    </s:states>
	<s:Label id="displayLabel" includeIn="normal" lineBreak="explicit"
		text="{hostComponent.model.displayText}" height="{hostComponent.model.fontSize}" fontSize="{hostComponent.model.fontSize}" color="{hostComponent.model.color}"
		textAlign="center"
		left="0" right="0" top="0"/>
	<s:TextInput id="displayLabelInput" includeIn="editing"
		text="@{hostComponent.model.text}" height="{hostComponent.model.fontSize}" fontSize="{hostComponent.model.fontSize}" color="{hostComponent.model.color}"
		textAlign="center"
		paddingTop="0" paddingBottom="0" paddingLeft="0" paddingRight="0"
		borderVisible="false"
		left="0" right="0" top="0"/>
</s:Skin>