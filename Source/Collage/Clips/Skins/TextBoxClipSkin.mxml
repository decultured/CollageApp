<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">
    <fx:Metadata>
        <![CDATA[ 
        	[HostComponent("Collage.Clip.ClipView")]
        ]]>
    </fx:Metadata> 
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="editing" />
    </s:states>
	<s:RichText id="displayLabel" includeIn="normal" lineBreak="explicit"
		fontSize="{hostComponent.model.fontSize}" color="{hostComponent.model.color}"
		left="0" right="0" top="0" bottom="0"
		content="{hostComponent.model.text}" />
	<s:RichEditableText id="displayLabelInput" includeIn="editing"
		text="@{hostComponent.model.text}" fontSize="{hostComponent.model.fontSize}" color="{hostComponent.model.color}"
		left="0" right="0" top="0" bottom="0"/>
</s:Skin>