<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		xmlns:ep="com.endlesspaths.components.*">
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="editing" />
    </s:states>
    <fx:Metadata>
        <![CDATA[ 
        	[HostComponent("Collage.Document.EditPageToolbar")]
        ]]>
    </fx:Metadata>
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" gap="15"/>
	</s:layout>
	<s:Group>
		<ep:PopUpButton label="Background" image="@Embed('/Assets/icons/fill-color.png')" title="Background" width="60">
			<ep:ColorSwatchAlphaSelector selectedColor="@{hostComponent.model.backgroundColor}" selectedAlpha="@{hostComponent.model.backgroundAlpha}" hideAlpha="true"/>
		</ep:PopUpButton>
	</s:Group>
</s:Skin>