<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009" >
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
    <fx:Metadata>
        <![CDATA[ 
        	[HostComponent("Collage.Application.CollageStatusBar")]
        ]]>
    </fx:Metadata> 
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
    <s:Rect width="100%" height="100%" >
        <s:fill>
			<s:SolidColor color="0x333333" alpha="1.0"/>
        </s:fill>
    </s:Rect>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" paddingLeft="10" />
		</s:layout>
		<s:Label text="{hostComponent.message}" color="{hostComponent.messageColor}" fontWeight="bold" />
	</s:Group>
</s:Skin>
