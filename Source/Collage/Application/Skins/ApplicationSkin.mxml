<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		xmlns:clgapp="Collage.Application.*"
		xmlns:clgdoc="Collage.Document.*"
		xmlns:ep="com.endlesspaths.components.*" >
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("Collage.Application.CollageApp")]
        ]]>
    </fx:Metadata> 
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>

	<fx:Declarations>
		<s:BitmapImage id="textPage" source="@Embed('/Assets/toolbar/textPage.png')" />
		<s:BitmapImage id="richText" source="@Embed('/Assets/toolbar/richText.png')" />
		<s:BitmapImage id="imageClip" source="@Embed('/Assets/toolbar/photo.png')" />
		
		<s:ArrayList id="arrComponentList">
			<fx:Object label="Label" image="{textPage}" componentType="label" />
			<fx:Object label="Rich Text" image="{richText}" componentType="textbox" />
			<fx:Object label="Image" image="{imageClip}" componentType="image" />
		</s:ArrayList>
	</fx:Declarations>

	<fx:Script><![CDATA[
		import Collage.Document.*;
		import Collage.Clips.*;
		import Desktop.Application.*;
		import mx.controls.Alert;
		import Collage.Clip.*;
		import Collage.Utilities.Logger.*;
		import spark.components.DropDownList;
		import mx.events.ItemClickEvent;
		
		protected function ClickHandler(event:MouseEvent):void
		{
			if(event && event.target is EditPage)
				editPage.DeselectAll();
		}
		
		protected function componentList_Init():void {
			componentList.addEventListener(ItemClickEvent.ITEM_CLICK, componentList_itemClickHandler);
		}
		
		protected function componentList_itemClickHandler(event:ItemClickEvent):void {
			editPage.AddClipByType(event.item.componentType);
			btnAddComponent.close();
		}

	]]></fx:Script>

	<s:SkinnableContainer id="toolbarContainer" right="0" left="0" top="0" height="45">
		<s:Rect width="100%" top="0" bottom="2">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry alpha="1.0" color="#E2E2E2" ratio="0"/>
					<s:GradientEntry alpha="1.0" color="#C7C7C7" ratio="1"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<s:Line width="100%" bottom="1">
			<s:stroke>
				<s:SolidColorStroke caps="none" color="#737373" joints="miter" miterLimit="4" weight="1"/>
			</s:stroke>
		</s:Line>
		<s:Line width="100%" bottom="0">
			<s:stroke>
				<s:SolidColorStroke caps="none" color="#E2E2E2" joints="miter" miterLimit="4" weight="1"/>
			</s:stroke>
		</s:Line>
		<s:Group id="toolbar" height="100%" width="100%" >
			<s:layout>
				<s:HorizontalLayout paddingLeft="10" paddingRight="10" paddingTop="3" paddingBottom="3" verticalAlign="middle"/>
			</s:layout>
		</s:Group>
	</s:SkinnableContainer>
	
	<s:BorderContainer id="docContainer" backgroundColor="0x555555"
		borderWeight="0" borderColor="0xffffff" dropShadowVisible="false"
		left="0" right="{collageSideBar.width}" top="{toolbarContainer.height}" bottom="{appStatusBar.height}" borderVisible="false">
		<s:Scroller hasFocusableChildren="true" tabEnabled="false" width="100%" height="100%" chromeColor="0x555555">
			<s:Group>
				<s:layout>
					<s:VerticalLayout paddingLeft="25" paddingRight="25" paddingTop="25" paddingBottom="25"/>
				</s:layout>
				<s:BorderContainer borderColor="0xffffff" dropShadowVisible="true" backgroundColor="0xffffff" width="{editPage.width}" height="{editPage.height}" >
					<clgdoc:EditPage id="editPage"
						click="ClickHandler(event);"
						creationComplete="editPage.InitializeForEdit();"
						clipAndEnableScrolling="true"
						toolbar="{toolbar}"
						optionsBox="{optionsBox}">
						<clgdoc:layout>
							<s:BasicLayout />
						</clgdoc:layout>
					</clgdoc:EditPage>
					<!--
					<s:Group width="100%" height="100%">
						<s:Path winding="nonZero" data="M{editDoc.width} {editDoc.height}
							 							0 {editDoc.height}
														0 0
														{editDoc.width} 0
														{editDoc.width} {editDoc.height}
														ZM52.4556 25.1177
														18.2974 37.7788
														39.873 76.3315
														74.0312 63.6709
														52.4556 25.1177Z">
							<s:fill>
								<s:SolidColor color="#000000" alpha="0.1"/>
							</s:fill>
						</s:Path>
					</s:Group>
					-->

					<s:Group id="optionsBox" visible="false">
						<s:Rect width="100%" height="100%">
							<s:stroke>
								<s:SolidColorStroke weight="1" alpha="0.4" color="0xff9900"/>
							</s:stroke>
						</s:Rect>
						<s:Group id="buttons" top="-24" horizontalCenter="0">
							<s:layout>
								<s:HorizontalLayout />
							</s:layout>
							<s:Group click="editPage.RefreshSelected()" >
								<s:BitmapImage id="refreshButton" source="@Embed('../../../../Assets/icons/refresh-clip.png')" smooth="true" />
							</s:Group>
							<s:Group click="editPage.ToggleEditSelected()" >
								<s:BitmapImage id="editButton" source="@Embed('../../../../Assets/icons/edit.png')" smooth="true" />
							</s:Group>
							<s:Group click="editPage.DeleteSelected()" >
								<s:BitmapImage id="deleteButton" source="@Embed('../../../../Assets/icons/delete.png')" smooth="true" />
							</s:Group>
						</s:Group>
					</s:Group>
				</s:BorderContainer>
			</s:Group>
		</s:Scroller>
	</s:BorderContainer>

	<clgapp:CollageSideBar id="collageSideBar" right="0" top="{toolbarContainer.height}" bottom="{appStatusBar.height}" skinClass="Collage.Application.Skins.CollageSideBarSkin" />
	
	<ep:ButtonCalloutPanel id="btnAddComponent" label="Insert" bottom="{appStatusBar.height + 20}" left="{collageSideBar.width + 30}" skinClass="com.endlesspaths.skins.ButtonCalloutPanelBlackHUDSkin" arrowPosition="bottom">
		<s:List id="componentList" initialize="componentList_Init()"  dataProvider="{arrComponentList}" itemRenderer="com.endlesspaths.components.TiledImageItemRenderer" contentBackgroundAlpha="0.0" color="#FFFFFF" borderVisible="false" width="100%">
			<s:layout>
				<s:TileLayout horizontalGap="8" verticalGap="8" requestedColumnCount="5" />
			</s:layout>
		</s:List>
	</ep:ButtonCalloutPanel>

	<clgapp:CollageStatusBar id="appStatusBar" width="100%" bottom="0" height="25" skinClass="Collage.Application.Skins.CollageStatusBarSkin"/>
</s:Skin>
