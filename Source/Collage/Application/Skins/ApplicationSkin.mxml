<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		xmlns:clg="Desktop.Application.*"
		xmlns:clgdoc="Collage.Document.*" >
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("Collage.Document.Document")]
        ]]>
    </fx:Metadata> 
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>

	<fx:Script><![CDATA[
		import Collage.Document.*;
		import Desktop.Application.*;
		import mx.controls.Alert;
		import Collage.Clip.*;
		
		protected function ClickHandler(event:MouseEvent):void
		{
			if(event) {
				if (event.target is EditDocument) {
					editDoc.DeselectAll();
				}
			}
		}
	]]></fx:Script>

	<s:SkinnableContainer right="0" left="0" top="0" height="45" contentBackgroundColor="#333333" skinClass="Collage.Application.Skins.ToolbarSkin" >
		<s:Group id="toolbar">
			<s:layout>
				<s:HorizontalLayout  paddingLeft="20" paddingRight="20" paddingTop="3" paddingBottom="3"/>
			</s:layout>
		</s:Group>
	</s:SkinnableContainer>

	<s:BorderContainer id="docContainer" backgroundColor="0x555555"
		borderWeight="0" borderColor="0xffffff" dropShadowVisible="false"
		right="0" left="0" top="45" bottom="25" borderVisible="false">
		<s:Scroller hasFocusableChildren="true" tabEnabled="false" width="100%" height="100%" chromeColor="0x555555">
			<s:Group>
				<s:layout>
					<s:VerticalLayout  paddingLeft="20" paddingRight="20" paddingTop="20" paddingBottom="20"/>
				</s:layout>
				<s:BorderContainer borderColor="0xffffff" dropShadowVisible="true" backgroundColor="0xffffff">
					<clgdoc:EditDocument id="editDoc" width="1024" height="768" click="ClickHandler(event);" clipAndEnableScrolling="true">
						<clgdoc:layout>
							<s:BasicLayout />
						</clgdoc:layout>
					</clgdoc:EditDocument>
				</s:BorderContainer>
			</s:Group>
		</s:Scroller>
	</s:BorderContainer>

	<s:BorderContainer id="appStatusBar" right="0" bottom="0" height="25" left="0" backgroundColor="0x333333"/>
</s:Skin>
