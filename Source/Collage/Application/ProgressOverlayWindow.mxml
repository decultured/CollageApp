		</s:Rect>
		<s:Rect height="39" rotation="135" width="9" x="96.419" y="89.855" alpha="0.62">
			<s:fill>
				<s:SolidColor color="#000000"/>
			</s:fill>
		</s:Rect>
		<s:Rect height="39" rotation="135" width="9" x="46.922" y="40.35797" alpha="0.12">
			<s:fill>
				<s:SolidColor color="#000000"/>
			</s:fill>
		</s:Rect>
	</s:Graphic>
	<s:Label text="{message}" fontSize="33" verticalCenter="0" left="60"/>
</s:SkinnableContainer>
