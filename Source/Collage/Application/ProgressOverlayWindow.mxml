			<s:fill>
				<s:SolidColor color="#000000"/>
			</s:fill>
		</s:Rect>
		<s:Rect height="39" rotation="45" width="9" x="90.055" y="12.781" alpha="0.87">
			<s:fill>
				<s:SolidColor color="#000000"/>
			</s:fill>
		</s:Rect>
		<s:Rect height="39" rotation="45" width="9" x="40.558" y="62.278" alpha="0.37">
			<s:fill>
