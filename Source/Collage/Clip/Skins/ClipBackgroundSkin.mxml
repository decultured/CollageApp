<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	    xmlns:mx="library://ns.adobe.com/flex/mx"
		width="100%" height="100%"
		minWidth="5" minHeight="5" >
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("Collage.Clip.ClipBackground")]
        ]]>
    </fx:Metadata> 
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
    <s:layout>
        <s:BasicLayout clipAndEnableScrolling="true"/>
    </s:layout>
	<s:Rect x="{hostComponent.model.borderWeight*0.5}" y="{hostComponent.model.borderWeight*0.5}" width="100%" height="100%" radiusX="{hostComponent.model.borderRadius}" radiusY="{hostComponent.model.borderRadius}">
		<s:stroke>
			<s:SolidColorStroke color="{hostComponent.model.borderColor}" weight="{hostComponent.model.borderWeight}" alpha="{(hostComponent.model.borderWeight)?hostComponent.model.borderAlpha:0}"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient>
				<s:entries>
					<mx:GradientEntry color="{hostComponent.model.backgroundColor}" alpha="{hostComponent.model.backgroundAlpha}"/>
				</s:entries>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Group id="contentGroup"
			left=	"{hostComponent.model.borderWeight + (hostComponent.model.borderRadius * 0.293)}"
			right=	"{hostComponent.model.borderWeight + (hostComponent.model.borderRadius * 0.293)}"
			top=	"{hostComponent.model.borderWeight + (hostComponent.model.borderRadius * 0.293)}"
			bottom=	"{hostComponent.model.borderWeight + (hostComponent.model.borderRadius * 0.293)}"
			minWidth="0" minHeight="0">
        <s:layout>
            <s:BasicLayout/>
        </s:layout>
    </s:Group>
</s:Skin>
